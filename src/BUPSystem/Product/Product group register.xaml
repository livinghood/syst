<Window x:Class="BUPSystem.Product.ProductGroupRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProductGroupRegister" Height="335" Width="485">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="215,16,0,0" x:Name="textBox1" VerticalAlignment="Top" Width="172" />
        <Button Content="Sök" Height="23" HorizontalAlignment="Left" Margin="392,16,0,0" x:Name="button2" VerticalAlignment="Top" Width="75" />
        <Label Content="Produktgruppregister" Height="39" HorizontalAlignment="Left" Margin="10,10,0,0" x:Name="label1" VerticalAlignment="Top" FontSize="20" />
        <ListView HorizontalAlignment="Left" Height="205" Margin="10,54,0,0" VerticalAlignment="Top" Width="456">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="150" Header="Produktgrupps ID"/>
                    <GridViewColumn Width="150" Header="Produktgruppsnamn"/>
                    <GridViewColumn Header="Tillhör produktkategori" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Välj produktgrupp" Height="23" HorizontalAlignment="Left" Margin="355,270,0,0" x:Name="button1" VerticalAlignment="Top" Width="112" />
        <Button Content="Ändra produktgruppuppgifter" Height="23" HorizontalAlignment="Left" Margin="10,270,0,0" x:Name="button3" VerticalAlignment="Top" Width="170" IsEnabled="False" />
        <Button Content="Lägg till ny produktgrupp" Height="23" HorizontalAlignment="Left" Margin="200,270,0,0" x:Name="button4" VerticalAlignment="Top" Width="150" />

    </Grid>
</Window>
