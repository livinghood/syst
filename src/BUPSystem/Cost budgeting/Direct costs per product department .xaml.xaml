<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:BUPSystem="clr-namespace:BUPSystem" x:Class="BUPSystem.Kostnadsbudgetering.DirectCostsPerProductDepartment"
        Title="DirectCostsPerProductDepartment" Height="470" Width="789" Loaded="Window_Loaded">
    <Window.Resources>
        <BUPSystem:BUPDataSet x:Key="bUPDataSet"/>
        <CollectionViewSource x:Key="directProductCostViewSource" Source="{Binding DirectProductCost, Source={StaticResource bUPDataSet}}"/>
        <CollectionViewSource x:Key="accountViewSource" Source="{Binding Account, Source={StaticResource bUPDataSet}}"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource directProductCostViewSource}">
        <Button Content="Skapa Exceldokument" Height="23" HorizontalAlignment="Left" Margin="90,406,0,0" x:Name="btnExcel" VerticalAlignment="Top" Width="116" Click="btnExcel_Click" />
        <Button Content="Skriv ut" Height="23" HorizontalAlignment="Left" Margin="10,406,0,0" x:Name="btnPrint" VerticalAlignment="Top" Width="75" Click="btnPrint_Click" />
        <Label Height="28" HorizontalAlignment="Left" Margin="103,359,0,0" x:Name="label2" VerticalAlignment="Top" Content="Summa" />
        <Button x:Name="btnSelectAccount" Content="Välj konto" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnSelectAccount_Click"/>
        <Button x:Name="btnSelectProduct" Content="Välj produkt" HorizontalAlignment="Left" Margin="235,10,0,0" VerticalAlignment="Top" Width="75" Click="btnSelectProduct_Click"/>
        <Button x:Name="btnSave" Content="Spara" HorizontalAlignment="Left" Margin="692,409,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>
        <Button x:Name="btnCancel" Content="Avbryt" HorizontalAlignment="Left" Margin="612,409,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" Click="btnCancel_Click"/>
        <Button x:Name="btnLock" Content="Lås kostnadbudget" HorizontalAlignment="Left" Margin="651,10,0,0" VerticalAlignment="Top" Width="120" Click="btnLock_Click"/>
        <DataGrid x:Name="accountDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding Source={StaticResource accountViewSource}}" Margin="10,35,10,85" RowDetailsVisibilityMode="VisibleWhenSelected">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="accountIDColumn" Binding="{Binding AccountID}" Header="Account ID" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="accountNameColumn" Binding="{Binding AccountName}" Header="Account Name" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
